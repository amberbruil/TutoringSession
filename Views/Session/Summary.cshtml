@model TutoringSession.Controllers.SummaryVm
@{
    ViewData["Title"] = "Session Summary";
}

<h2 class="mb-3">Session Summary</h2>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Lecturer</dt>
            <dd class="col-sm-9">@Model.LecturerName</dd>

            <dt class="col-sm-3">Student</dt>
            <dd class="col-sm-9">@Model.StudentName</dd>

            <dt class="col-sm-3">Date</dt>
            <dd class="col-sm-9">@Model.SessionDate.ToString("yyyy-MM-dd")</dd>

            <dt class="col-sm-3">Hours</dt>
            <dd class="col-sm-9">@Model.HoursTutored</dd>

            <dt class="col-sm-3">Hourly Rate</dt>
            <dd class="col-sm-9">@Model.HourlyRate.ToString("0.00")</dd>

            <dt class="col-sm-3">Total Fee</dt>
            <dd class="col-sm-9 fw-bold">@Model.FeeAmount.ToString("0.00")</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Create Another Session</a>
</div>
