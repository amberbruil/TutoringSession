@model TutoringSession.Dtos.SessionReadDto
@{
    ViewData["Title"] = "Tutoring Session Summary";
}

<h2>Tutoring Session Summary</h2>
<div class="card p-3">
    <p><strong>Lecturer:</strong> @Model.LecturerName</p>
    <p><strong>Student:</strong> @Model.StudentName</p>
    <p><strong>Hours Tutored:</strong> @Model.HoursTutored</p>
    <p><strong>Hourly Rate:</strong> @Model.HourlyRate</p>
    <p><strong>Session Date:</strong> @Model.SessionDate.ToShortDateString()</p>
    <p><strong>Calculated Fee:</strong> <span class="text-success">@Model.FeeAmount</span></p>
</div>

<a asp-action="Index" class="btn btn-secondary">New Session</a>
